#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/web/album-hexo/album-hexo/node_modules/.pnpm/hexo@7.3.0/node_modules/hexo/bin/node_modules:/mnt/c/web/album-hexo/album-hexo/node_modules/.pnpm/hexo@7.3.0/node_modules/hexo/node_modules:/mnt/c/web/album-hexo/album-hexo/node_modules/.pnpm/hexo@7.3.0/node_modules:/mnt/c/web/album-hexo/album-hexo/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/c/web/album-hexo/album-hexo/node_modules/.pnpm/hexo@7.3.0/node_modules/hexo/bin/node_modules:/mnt/c/web/album-hexo/album-hexo/node_modules/.pnpm/hexo@7.3.0/node_modules/hexo/node_modules:/mnt/c/web/album-hexo/album-hexo/node_modules/.pnpm/hexo@7.3.0/node_modules:/mnt/c/web/album-hexo/album-hexo/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/hexo" "$@"
else
  exec node  "$basedir/../../bin/hexo" "$@"
fi
